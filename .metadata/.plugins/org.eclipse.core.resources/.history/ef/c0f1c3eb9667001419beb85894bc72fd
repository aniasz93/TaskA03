package taskA03;

import java.util.Iterator;
import java.util.List;
import java.util.Map;
import java.util.Map.Entry;

public class Vertex {

	int state;
	
	public Vertex (int state) {
		this.state = state;
	}
	
	public boolean checkIfExists(Map automata, int state) {
		
		if (automata.containsKey(state))
			return true;
		
		Iterator entries = automata.entrySet().iterator();
		while (entries.hasNext()) {
			Entry thisEntry = (Entry)entries.next();
			List<Edge> edges = (List<Edge>) thisEntry.getValue();
			edges.contains(state);
		}
		if(automata.)
		
		return false;
	}
}
